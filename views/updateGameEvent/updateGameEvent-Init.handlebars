<div class="container">
    <h1> Update Event </h1>

    <form class="form-horizontal" action='/updateGameEvent' method='POST' id='updateGameEvent-form'>
        <div class="form-group d-flex">
            <label class="control-label col-sm-2" for="title">Title:</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" id="title" placeholder="Enter title" name="title"
                    value="{{event.title}}" required>
            </div>
        </div>
        <div class="form-group d-flex">
            <label class="control-label col-sm-2" for="sportCategory">Sport:</label>
            <div class="col-sm-5">
                <select class="form-control" id="sportCategory" name="sportCategory">
                    <option value="none" selected disabled hidden>Choose a sport</option>
                    <option value="soccer">Soccer</option>
                    <option value="football">Football</option>
                    <option value="golf">Golf</option>
                    <option value="baseball">Baseball</option>
                    <option value="basketball">Basketball</option>
                    <option value="badminton">Badminton</option>
                    <option value="swimming">Swimming</option>
                    <option value="archery">Archery</option>
                    <option value="dodgeball">Dodgeball</option>
                    <option value="frisbee">Frisbee</option>
                </select>
            </div>
        </div>
        <div class="form-group d-flex">
            <label class="control-label col-sm-2" for="description">Description:</label>
            <div class="col-sm-5">
                <textarea class="form-control" id="description" placeholder="Enter description" name="description"
                     required>{{event.description}}</textarea>
            </div>
        </div>
        <div class="form-group d-flex" id="area" area="{{area}}">
            <label class="control-label col-sm-2" for="address">Address:</label>
            <div class="col-sm-2">
                <p>{{area}}</p>
                {{!-- <select class="form-control" name="area" id="area">
                    <option value="none" selected disabled hidden>Choose your area</option>
                    <option value="hoboken">Hoboken</option>
                    <option value="jersey city">Jersey City</option>
                    <option value="kearny">Kearny</option>
                    <option value="union city">Union City</option>
                </select> --}}
            </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="address" placeholder="Enter street" name="address"
                    value="{{event.address}}" required>
            </div>
        </div>
        <div class="event-maps row">
            <div class="col-md-2">
                <label hidden for="latitude">latitude</label>
                <input hidden type="text" id="latitude" name="latitude" value="{{event.latitude}}">
                <label hidden for="longitude">longitude</label>
                <input hidden type="text" id="longitude" name="longitude" value="{{event.longitude}}">
            </div>
            <div class="col-md-7">
                <div id="map"></div>
            </div>
        </div>
        <div class="form-group d-flex">
            <label class="control-label col-sm-2" for="date">Date of the Event:</label>
            <div class="col-sm-3">
                <input type="date" class="form-control" id="date" name="date" min="{{minStartDate}}"
                    value="" required>
            </div>
        </div>
        <div class="form-group d-flex">
            <label class="control-label col-sm-2" for="startTime">Event Start Time:</label>
            <div class="col-sm-3">
                <input type="time" class="form-control" id="startTime" name="startTime" value=""
                    required>
            </div>
        </div>
        <div class="form-group d-flex">
            <label class="control-label col-sm-2" for="endTime">Event End Time:</label>
            <div class="col-sm-3">
                <input type="time" class="form-control" id="endTime" name="endTime" value="" required>
            </div>
        </div>
        <div class="form-group d-flex">
            <label class="control-label col-sm-2" for="minParticipants">Minimum number of Participants:</label>
            <div class="col-sm-3">
                <input type="number" class="form-control" id="minParticipants" name="minParticipants"
                    placeholder='Minimum' value="{{event.minimumParticipants}}" required>
            </div>
        </div>
        <div class="form-group d-flex">
            <label class="control-label col-sm-2" for="maxParticipants">Maximum number of Participants:</label>
            <div class="col-sm-3">
                <input type="number" class="form-control" id="maxParticipants" name="maxParticipants"
                    placeholder='Maximum' value="{{event.maximumParticipants}}" required>
            </div>
        </div>
        <div class="form-group d-flex">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Update Event</button>
            </div>
        </div>
    </form>
    <p id="gameEventId" hidden>{{gameEventId}}</p>
</div>
<div class="error" id="errorDivUpdateGameEvent">{{error}}</div>
