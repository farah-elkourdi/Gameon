<div class="container h-100 login-divider">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="/public/img/logo.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form method="POST" id="login-form">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <label for="email"></label>
                        <input class="form-control input_user" id="email" type="text" placeholder="Enter Email"
                            name="email" value="{{email}}" />
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <label for="password"></label>
                        <input class="form-control input_pass" id="password" type="password"
                            placeholder="Enter password" name="password" value="{{password}}" />
                    </div>
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button id="btnlogin" type="button" name="button" class="btn login_btn">Login</button>
                    </div>
                </form>
            </div>
            <div class="alert alert-danger mt-2 mb-2" id="errordiv">
                <ul id="error" class="m-0">
                </ul>
            </div>
            <div class="mt-2">
                <div class="d-flex justify-content-center links">
                    Don't have an account? <a href="/user/signup" class="ml-2 adjust-contrast">Sign Up</a>
                </div>
                <div class="d-flex justify-content-center links">
                    <a href="/user/forgetpass" class="ml-2 adjust-contrast">Forget password <i class="far fa-frown"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/public/js/signin.js"></script>