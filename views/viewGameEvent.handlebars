{{!-- Participant list --}}
<div class="modal fade" id="participantModal" tabindex="-1" role="dialog" aria-labelledby="participantModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="participantModalLabel">Participants</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group list-group-flush border-bottom scrollarea" id="event_participants">
                    {{#each event.participants}}
                    <li class="list-group-item" aria-current="true">
                        <div class="mb-1">
                            <div class="d-inline-flex col-md-12 pl-0">
                                <div class="col-md-1 pl-0">
                                    <div class="profileImage" name="profileImage"></div>
                                </div>
                                <div name="profileImageName" class="col-md-7 ml-2 text-capitalize pt-2">{{this.name}}
                                </div>
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


